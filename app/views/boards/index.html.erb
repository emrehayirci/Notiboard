
  <h1>Boards</h1>
  <% @boards.each do |board| %>
  <div class = "col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading"><%= link_to board.title , board_path(board.id) %></div>
      <div class="panel-body">
        <%= board.description %>
      </div>
    </div>
  </div>
  <%end %>
