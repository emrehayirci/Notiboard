<%= simple_form_for @board do |f| %>
  <% if @board.errors.any? %>
    <ul>
      <% @board.errors.full_messages.each do |msg| %>
        <li>
          <%=msg%>
        </li>
      <% end %>
    </ul>
  <% end %>

  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :public %>
  <%= f.input :logo %>
  <%= f.input :remove_logo, as: boolean %>
  <%= f.submit "Gonder", class: "btn btn-primary" %>
<% end %>
